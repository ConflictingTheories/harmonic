# Music Streaming Platform Configuration
# Copy this file to config.txt and customize

# Playback Mode
# Options: radio, dj, coder
mode=radio

# Visualizer Theme
# Options: cyberpunk, forest, netherworld
theme=cyberpunk

# Network Configuration
web_port=8080
stream_port=8081

# Audio Streaming Format
# Options: mp3, ogg
# MP3: MPEG-1 Audio Layer III (good compression, widely compatible)
# OGG: OGG Vorbis (excellent quality/compression ratio, open format)
stream_format=mp3

# Audio Configuration
sample_rate=44100
buffer_size=512

# Music Directory
# Path to your music collection
music_directory=./music

# Playlist File (optional)
# If specified, loads a specific playlist
# playlist_file=./playlists/favourites.m3u

# Advanced Settings
auto_advance=true
shuffle_on_start=true
# repeat_mode=all